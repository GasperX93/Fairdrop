#!/usr/bin/env bash
confirm() {
    # call with a prompt string or use a default
    read -r -p "${1:-Are you sure? [y/N]} " response
    case "$response" in
        [yY][eE][sS]|[yY]) 
            true
            ;;
        *)
            exit 1
            ;;
    esac
}

VERS=$1
ENVIR="s"

if [ "$VERS" = "" ]; then
               echo "please provide a version number"
               exit 1;
            fi
VER=$VERS$ENVIR

echo $VER
head package.json
git status        
confirm "Have you incremented package.json to version number $VERS? (don't add s)" &&
confirm "Is the stage otherwise clean?" &&
confirm "Are you on staging branch?" &&
echo "pushed"
cp .env.testnet-dev .env.production 
echo "updated production .env"
npm run build
echo "built"
echo "uploading to http://209.97.190.111:8500/"
swarm --bzzapi http://209.97.190.111:8500/ --defaultpath index.html --recursive up ~/Code/df/fairdrop/build/ > current_dev
HASH=`cat config.txt`
echo "uploaded to hash $HASH"
git add package.json package-lock.json && git commit -m "bump version"
echo "added bump version"
git add current_dev && git commit -m 'bump current_dev'
echo "added bump current_dev"
git tag $VER
echo "added tag $VER"
git push origin $VER
git push df $VER
cat current_dev